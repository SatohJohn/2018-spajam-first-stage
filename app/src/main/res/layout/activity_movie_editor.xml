<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hensyu_choose" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.55">

        <LinearLayout
            android:layout_width="1080px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left"
            android:orientation="horizontal">

            <VideoView
                android:id="@+id/videoView1"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <VideoView
                android:id="@+id/videoView2"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <VideoView
                android:id="@+id/videoView3"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <VideoView
                android:id="@+id/videoView4"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <VideoView
                android:id="@+id/videoView5"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.55"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="205dp">

        <Button
            android:id="@+id/movie_save_button"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_weight="1"
            android:background="@drawable/hensyu_btn_hozon_01"
            app:srcCompat="@drawable/hensyu_btn_hozon_01" />

        <Button
            android:id="@+id/sample_start_button"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_weight="1"
            android:background="@drawable/hensyu_btn_rokuga_01"
            app:srcCompat="@drawable/hensyu_btn_rokuga_01" />

    </LinearLayout>

</LinearLayout>